<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

  <schema path="/org/x/pix/pixbuf-savers/" id="org.x.pix.pixbuf-savers">
    <child schema="org.x.pix.pixbuf-savers.jpeg" name="jpeg"/>
    <child schema="org.x.pix.pixbuf-savers.png" name="png"/>
    <child schema="org.x.pix.pixbuf-savers.tga" name="tga"/>
    <child schema="org.x.pix.pixbuf-savers.tiff" name="tiff"/>
    <child schema="org.x.pix.pixbuf-savers.webp" name="webp"/>
  </schema>

  <schema path="/org/x/pix/pixbuf-savers/jpeg/" id="org.x.pix.pixbuf-savers.jpeg">
    <key type="s" name="default-ext">
      <default>'jpeg'</default>
      <description>Possible values are: jpeg, jpg.</description>
    </key>
    <key type="i" name="quality">
      <default>85</default>
    </key>
    <key type="i" name="smoothing">
      <default>0</default>
    </key>
    <key type="b" name="optimize">
      <default>true</default>
    </key>
    <key type="b" name="progressive">
      <default>false</default>
    </key>
  </schema>

  <schema path="/org/x/pix/pixbuf-savers/png/" id="org.x.pix.pixbuf-savers.png">
    <key type="i" name="compression-level">
      <default>6</default>
    </key>
  </schema>

  <schema path="/org/x/pix/pixbuf-savers/tga/" id="org.x.pix.pixbuf-savers.tga">
    <key type="b" name="rle-compression">
      <default>true</default>
    </key>
  </schema>

  <schema path="/org/x/pix/pixbuf-savers/tiff/" id="org.x.pix.pixbuf-savers.tiff">
    <key type="s" name="default-ext">
      <default>'tiff'</default>
      <description>Possible values are: tiff, tif.</description>
    </key>
    <key name="compression" enum="org.x.pix.GthTiffCompression">
      <default>'deflate'</default>
    </key>
    <key type="i" name="horizontal-resolution">
      <default>72</default>
    </key>
    <key type="i" name="vertical-resolution">
      <default>72</default>
    </key>
  </schema>

  <schema path="/org/x/pix/pixbuf-savers/webp/" id="org.x.pix.pixbuf-savers.webp">
    <key type="b" name="lossless">
      <default>false</default>
    </key>
    <key type="i" name="quality">
      <default>75</default>
    </key>
    <key type="i" name="method">
      <default>4</default>
    </key>
  </schema>

</schemalist>